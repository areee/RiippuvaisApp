<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Exercise1Activity">

        <TextView
            android:id="@+id/exercise3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/exercise3_help_text"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

        <Button
            android:id="@+id/read_exercise3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="startReading"
            android:text="@string/read_button" />

        <TextView
            android:id="@+id/exercise3_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Valitse oikea vaihtoehto:"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Headline" />

        <TextView
            android:id="@+id/exercise3_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="3.1 Siinä mainitun tutkimustuloksen valossa"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />


        <RadioGroup
            android:id="@+id/exercise3_radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@+id/exercise3_radioButton1">

            <RadioButton
                android:id="@+id/exercise3_radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vain kolmen sekunnin mittaiset keskeytykset eivät vaikuttaneet työtuloksiin" />

            <RadioButton
                android:id="@+id/exercise3_radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kolme sekuntia kestäneet keskeytykset lisäsivät työssä tapahtuvien virheiden määrää" />

            <RadioButton
                android:id="@+id/exercise3_radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kolme sekuntia kestäneet keskeytykset kolminkertaistivat koehenkilöiden tekemien virheiden määrän" />
        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#888888" />

        <TextView
            android:id="@+id/exercise3_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="3.2 Kirjoittajan näkemyksen mukaan tutkimuksesta saatu tulos"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <RadioGroup
            android:id="@+id/exercise3_radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checkedButton="@+id/exercise3_radioButton4">

            <RadioButton
                android:id="@+id/exercise3_radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On aivan uutta tietoa" />

            <RadioButton
                android:id="@+id/exercise3_radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Osoittaa että puhelin on hyvä jättää äänettömälle jos haluaa keskittyä työntekoon" />

            <RadioButton
                android:id="@+id/exercise3_radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Osoittaa kuinka tärkeä on tehdä häiriötön työpiste" />
        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#888888" />

        <TextView
            android:id="@+id/exercise3_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="3.3 Mieti seuraavia väittämiä ja merkitse missä määrin samaistut niihin (0=täysin eri mieltä, 5=täysin samaa mieltä) Mikäli mahdollista, pohdi väittämiä kaverin kanssa!"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:id="@+id/exercise3_title5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="a. Pystyn suoriutumaan älyllisesti vaativista tehtävistä yhtä hyvin vaikka vastaisin muutamaan tekstiviestin tunnissa" />

        <TextView
            android:id="@+id/seekBar_text_exercise3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seekBar_exercise3_1"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"

            android:progress="0" />

        <TextView
            android:id="@+id/exercise3_title6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="b. Vastaan usein kiireettömiinkin viesteihin mahdollisimman pian" />

        <TextView
            android:id="@+id/seekBar_text_exercise3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seekBar_exercise3_2"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"

            android:progress="0" />

        <TextView
            android:id="@+id/exercise3_title7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="c. Arvostan enemmän kasvokkain käytyä keskustelua kuin puhelimen välillä käytyä keskustelua tuttavien kanssa" />

        <TextView
            android:id="@+id/seekBar_text_exercise3_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seekBar_exercise3_3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"

            android:progress="0" />

        <TextView
            android:id="@+id/exercise3_title8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="d. Elämäntilanteeni on sellainen, että voisin sulkea puhelimen internet-yhteyden joiksikin tunneiksi päivän aikana" />

        <TextView
            android:id="@+id/seekBar_text_exercise3_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seekBar_exercise3_4"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="0" />

        <Button
            android:id="@+id/exercise3_ready_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="checkAnswers"
            android:text="Tarkista" />


    </LinearLayout>
</ScrollView>
