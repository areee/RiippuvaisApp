<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsb="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Exercise1Activity">

        <TextView
            android:id="@+id/exercise1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/exercise1_help_text"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead" />

        <Button
            android:id="@+id/read_exercise1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="startReadPage"
            android:text="@string/read_exercise1_button" />

        <TextView
            android:id="@+id/exercise1_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tekstin perusteella:"
            android:textAppearance="@android:style/TextAppearance.Material.Headline" />

        <TextView
            android:id="@+id/exercise1_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/exercise1_title2"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <RadioGroup
            android:id="@+id/exercise1_radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/exercise1_radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On hyvä tapa lopettaa päivä" />

            <RadioButton
                android:id="@+id/exercise1_radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sisältää runsaasti hyviäkin puolia" />

            <RadioButton
                android:id="@+id/exercise1_radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Olisi hyvä lopettaa kokonaan koska se häiritsee keskittymistä" />
        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#888888" />

        <TextView
            android:id="@+id/exercise1_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="1.2 Kirjoittaja somettaa työpäivän aikana"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <RadioGroup
            android:id="@+id/exercise1_radioGroup2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/exercise1_radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vain kerran viikossa" />

            <RadioButton
                android:id="@+id/exercise1_radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ei ollenkaan" />

            <RadioButton
                android:id="@+id/exercise1_radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiettyinä hetkinä päivässä" />

        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#888888" />

        <TextView
            android:id="@+id/exercise1_title4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="1.3 Tähän kysymykseen ei ole oikeaa tai väärää vastausta. Mieti seuraavia väittämiä ja merkitse missä määrin samaistut niihin (0=täysin eri mieltä, 5=täysin samaa mieltä) Mikäli mahdollista, pohdi väittämiä kaverin kanssa!"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Title" />

        <TextView
            android:id="@+id/exercise1_title5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="a. Ihmisen tulisi rakentaa minuuttaan koettujen kokemusten päälle, joissa myös sosiaalisen median tapahtumat voivat olla yksi merkityksellinen elementti" />

        <!--<SeekBar-->
            <!--android:id="@+id/seekBar_exercise1_1"-->
            <!--style="@style/Widget.AppCompat.SeekBar.Discrete"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:max="5"-->
            <!--android:progress="0"/>-->

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:id="@+id/seekBar_exercise1_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            rsb:absoluteMaxValue="5"
            rsb:absoluteMinValue="0"
            rsb:singleThumb="true"
            rsb:textAboveThumbsColor="@android:color/black"/>

        <TextView
            android:id="@+id/exercise1_title6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="b. Ihmisen tulisi rakentaa minuuttaan todellisten kokemusten päälle, joiden kokemista puhelimen käyttö vain rajoittaa" />

        <SeekBar
            android:id="@+id/seekBar_exercise1_2"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="0" />

        <TextView
            android:id="@+id/exercise1_title7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="c. Sosiaalisen median kautta saatava vaikutelma henkilöstä on nykyään yhtä merkityksellinen kuin henkilön vaatetuksen ja muun ulkoasun antama vaikutelma." />

        <SeekBar
            android:id="@+id/seekBar_exercise1_3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="0" />

        <TextView
            android:id="@+id/exercise1_title8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="d. Ystävien kanssa vietetty aika saa lisäarvoa jos siitä jää muiston lisäksi kuvamateriaalia." />

        <SeekBar
            android:id="@+id/seekBar_exercise1_4"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="0" />

        <Button
            android:id="@+id/exercise1_ready_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="checkAnswers"
            android:text="Tarkista" />

    </LinearLayout>
</ScrollView>

